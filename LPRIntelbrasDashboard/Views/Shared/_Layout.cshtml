@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.Routing
@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - F&F Security</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background: #0d6efd;
            height: 100vh;
            position: fixed;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    background: rgba(255,255,255,0.1);
                }

            .sidebar .submenu .nav-link {
                padding-left: 2rem;
            }

            .sidebar .submenu {
                display: none;
            }

                .sidebar .submenu.show {
                    display: block;
                }

        .rotate {
            transform: rotate(180deg);
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar d-flex flex-column p-3">
            <a href="/" class="d-flex align-items-center mb-3 text-white text-decoration-none">
                <i class="fas fa-shield-alt fa-lg me-2"></i>
                <span class="fs-4">F&F Security</span>
            </a>
            <hr class="text-white">
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Dashboard","Dashboard")" class="nav-link @(currentController=="Dashboard" && currentAction=="Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>               
                <li class="nav-item">
                    <a href="#" class="nav-link d-flex justify-content-between align-items-center toggle-settings">
                        <span><i class="fas fa-cog me-2"></i> Configurações</span>
                        <i class="fas fa-chevron-down" id="settingsToggleIcon"></i>
                    </a>
                    <div class="submenu" id="settingsSubmenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li>
                                <a href="@Url.Action("Alertas", "Alertas")" class="nav-link @(currentController == "Alertas" && currentAction == "Alertas" ? "active" : "")">
                                    <i class="fas fa-bell me-2"></i> Configurar Alarme
                                </a>
                            </li>                          
                        </ul>
                    </div>
                </li>
            </ul>
            <hr class="text-white mt-auto">
            <div>
                <a href="@Url.Action("Logout","Account")" class="nav-link text-white">
                    <i class="fas fa-sign-out-alt me-2"></i> Sair
                </a>
            </div>
        </nav>
        <div class="content w-100">
            @RenderBody()
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var toggle = document.querySelector('.toggle-settings');
            var submenu = document.getElementById('settingsSubmenu');
            var icon = document.getElementById('settingsToggleIcon');
            toggle.addEventListener('click', function(e) {
                e.preventDefault();
                submenu.classList.toggle('show');
                icon.classList.toggle('rotate');
            });
            // Open submenu if current controller is Settings
        @if (currentController == "Settings")
        {
            <text>submenu.classList.add('show'); icon.classList.add('rotate');</text>
        }
        });
    </script>
</body>
</html>
